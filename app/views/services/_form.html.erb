<%= simple_form_for(@service) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :default_price_per_item %>
  </div>

  <div class="form-actions">
    <%= f.button :submit,  class: 'button tiny' , data: { disable_with: 'Submitting...' } %>
  </div>
<% end %>
